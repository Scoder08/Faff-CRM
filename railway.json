{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd frontend && npm install && DISABLE_ESLINT_PLUGIN=true CI=false npm run build && cd .."
  },
  "deploy": {
    "startCommand": "gunicorn backend.app:app --bind 0.0.0.0:$PORT --workers 1 --threads 2 --timeout 120",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}